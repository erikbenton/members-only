<h1>New Post</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(:post, url: posts_path) do |f| %>
			<%= f.label :title %>
			<%= f.text_field :title, class: "form-control" %>

			<%= f.label :body %>
			<%= f.text_area :body, class: "form-control" %>

			<%= hidden_field_tag :author, @user.name %>

			<%= f.submit "Create Post" %>
		<% end %>
	</div>
</div>